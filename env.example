# n8n Configuration
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Salesforce Configuration
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_LOGIN_URL=https://test.salesforce.com
SALESFORCE_ACCESS_TOKEN_URL=https://test.salesforce.com/services/oauth2/token
SALESFORCE_AUTH_URL=https://test.salesforce.com/services/oauth2/authorize

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_WEBHOOK_URL=http://localhost:5678/webhook/slack/mila-bot

# Database Configuration (if using external database)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=your_db_password

# Redis Configuration (if using external Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
N8N_USER_MANAGEMENT_DISABLED=false
N8N_PERSONALIZATION_ENABLED=true

# Logging Configuration
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=/home/node/.n8n/logs/

# Performance Configuration
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=true
N8N_DEFAULT_LOCALE=en
N8N_DISABLE_UI=false

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678/
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_PORT=5678

# Timezone Configuration
GENERIC_TIMEZONE=America/Managua
